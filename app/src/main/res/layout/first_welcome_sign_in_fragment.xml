<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:id="@+id/workout_anywhere_picture_first"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />


    <TextView
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:clickable="true"
        android:layout_gravity="center"
        android:textColor="@color/rundle_blue_hex"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/click_here_to_sign_up"
        android:id="@+id/register_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="@color/rundle_blue_hex"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Already Have An Account?"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="125dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@color/rundle_blue_hex"
        android:textColor="@color/secondary_grey"
        android:text="Sign In"
        android:id="@+id/first_sign_in_button"
        android:layout_gravity="center_horizontal" />

</LinearLayout>